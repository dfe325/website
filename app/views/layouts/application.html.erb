<!DOCTYPE html>
<html>
<head>
  <title>Website</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="/stylesheets/css/normalize.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/css/foundation.min.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/application.css">

</head>
<body>

  <nav class="top-bar">
    <ul class="title-area">
      <!-- <li class="name">
        <h1><a href="/">Website</a></h1>
      </li> -->
    </ul>

    <section class="top-bar-section">
      <ul class="right">
          <li><%= link_to 'Welcome' %></li>
          <li><%= link_to 'LinkedIn'  %></li>
          <li><%= link_to 'Github' %></li>
          <li><%= link_to 'Writing'  %></li>
          <li><%= link_to 'Hobbies' %></li>
          <li><%= link_to 'Dogs' %></li>
      </ul>
    </section>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
