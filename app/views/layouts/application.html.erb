<!DOCTYPE html>
<html>
<head>
  <title>Website</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css" href="/stylesheets/css/normalize.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/css/foundation.min.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/application.css">

</head>
<body>

  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">Dan Eder</a></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
          <li><%= link_to 'Welcome', welcome_index_path %></li>
          <li> <a href= "https://www.linkedin.com/in/daneder1" ><%= 'LinkedIn'  %> </a></li>
          <li><a href= "https://github.com/dfe325"> <%= 'Github' %> </a> </li>
          <li><%= link_to 'Writing', writing_index_path  %></li>
          <li><%= link_to 'Hobbies', hobbies_path %></li>
          <li><%= link_to 'Dogs', dogs_path %></li>
      </ul>
    </section>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
